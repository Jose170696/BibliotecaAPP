@model BibliotecaAPP.Models.PrestamoModel


@{
    ViewData["Title"] = "Agregar Prestamo";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      integrity="sha512-pDmwOTfj3WFL1KAMOVe+Q2vRf8bKeS7/6m2kF1q1DGLu9keZZJgETd82V7pJPq8STmkAEn1kC2K8gX2ViZ4r4w=="
      crossorigin="anonymous" referrerpolicy="no-referrer" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center">
                    <h3><i class="fas fa-book-medical"></i> Agregar Nuevo Prestamo</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <!-- Id Usuario -->
                        <div class="form-group mb-3">
                            <label asp-for="IdUsuario" class="form-label d-none"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-book"></i></span>
                                <input asp-for="IdUsuario" class="form-control" placeholder="Id de Usuario" />
                            </div>
                            <span asp-validation-for="IdUsuario" class="text-danger"></span>
                        </div>

                        <!-- Id Libro -->
                        <div class="form-group mb-3">
                            <label asp-for="IdLibro" class="form-label d-none"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                                <input asp-for="IdLibro" class="form-control" placeholder="Id del Libro" />
                            </div>
                            <span asp-validation-for="IdLibro" class="text-danger"></span>
                        </div>

                        <!-- Fecha Prestamo -->
                        <div class="form-group mb-3">
                            <label asp-for="FechaPrestamo" class="form-label">Fecha del Préstamo</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                                <input asp-for="FechaPrestamo" type="date" class="form-control" placeholder="Selecciona la fecha" />
                            </div>
                            <span asp-validation-for="FechaPrestamo" class="text-danger"></span>
                        </div>
                        <!-- Fecha Esperada devolucion-->
                        <div class="form-group mb-3">
                            <label asp-for="FechaDevolucionEsperada" class="form-label">Fecha del Esperada de devolucion</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                                <input asp-for="FechaDevolucionEsperada" type="date" class="form-control" placeholder="Selecciona la fecha" />
                            </div>
                            <span asp-validation-for="FechaDevolucionEsperada" class="text-danger"></span>
                        </div>

                        <!-- Fecha Real devolucion -->
                        <div class="form-group mb-3">
                            <label asp-for="FechaDevolucionReal" class="form-label">Fecha del Real de devolucion</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                                <input asp-for="FechaDevolucionReal" type="date" class="form-control" placeholder="Selecciona la fecha" />
                            </div>
                            <span asp-validation-for="FechaDevolucionReal" class="text-danger"></span>
                        </div>

                        <!-- Estado -->
                        <div class="form-group mb-3">
                            <label asp-for="Estado" class="form-label d-none"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-tags"></i></span>
                                <input asp-for="Estado" class="form-control" placeholder="Estado del prestamo para el libro " />
                            </div>
                            <span asp-validation-for="Estado" class="text-danger"></span>
                        </div>


                        <!-- Botón Guardar -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-save"></i> Guardar nuevo prestamo
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
