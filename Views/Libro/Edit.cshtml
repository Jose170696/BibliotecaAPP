@model BibliotecaAPP.Models.LibroModel

@{
    ViewData["Title"] = "Editar Libro";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      integrity="sha512-pDmwOTfj3WFL1KAMOVe+Q2vRf8bKeS7/6m2kF1q1DGLu9keZZJgETd82V7pJPq8STmkAEn1kC2K8gX2ViZ4r4w=="
      crossorigin="anonymous" referrerpolicy="no-referrer" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center">
                    <h3><i class="fas fa-edit"></i> Editar Libro</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.Id)

                        <!-- Título -->
                        <div class="form-group mb-3">
                            <label asp-for="Titulo" class="form-label d-none"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-book"></i></span>
                                <input asp-for="Titulo" class="form-control" placeholder="Título del libro" />
                            </div>
                            <span asp-validation-for="Titulo" class="text-danger"></span>
                        </div>

                        <!-- Autor -->
                        <div class="form-group mb-3">
                            <label asp-for="Autor" class="form-label d-none"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                                <input asp-for="Autor" class="form-control" placeholder="Autor del libro" />
                            </div>
                            <span asp-validation-for="Autor" class="text-danger"></span>
                        </div>

                        <!-- Editorial -->
                        <div class="form-group mb-3">
                            <label asp-for="Editorial" class="form-label d-none"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-building"></i></span>
                                <input asp-for="Editorial" class="form-control" placeholder="Editorial del libro" />
                            </div>
                            <span asp-validation-for="Editorial" class="text-danger"></span>
                        </div>

                        <!-- ISBN -->
                        <div class="form-group mb-3">
                            <label asp-for="ISBN" class="form-label d-none"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-barcode"></i></span>
                                <input asp-for="ISBN" class="form-control" placeholder="ISBN del libro" />
                            </div>
                            <span asp-validation-for="ISBN" class="text-danger"></span>
                        </div>

                        <!-- Año -->
                        <div class="form-group mb-3">
                            <label asp-for="Anio" class="form-label d-none"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                                <input asp-for="Anio" type="number" class="form-control" placeholder="Año de publicación" />
                            </div>
                            <span asp-validation-for="Anio" class="text-danger"></span>
                        </div>

                        <!-- Categoría -->
                        <div class="form-group mb-3">
                            <label asp-for="Categoria" class="form-label d-none"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-tags"></i></span>
                                <input asp-for="Categoria" class="form-control" placeholder="Categoría del libro" />
                            </div>
                            <span asp-validation-for="Categoria" class="text-danger"></span>
                        </div>

                        <!-- Stock -->
                        <div class="form-group mb-4">
                            <label asp-for="Stock" class="form-label d-none"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-cogs"></i></span>
                                <input asp-for="Stock" type="number" class="form-control" placeholder="Cantidad en stock" />
                            </div>
                            <span asp-validation-for="Stock" class="text-danger"></span>
                        </div>

                        <!-- Botón Guardar -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-warning btn-lg">
                                <i class="fas fa-save"></i> Actualizar Libro
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
