@model IEnumerable<BibliotecaAPP.Models.LibroModel>

@{
    ViewData["Title"] = "Libros";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" crossorigin="anonymous" />

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="fas fa-book"></i> @ViewData["Title"]</h4>
            <div>
                <a asp-action="Create" class="btn btn-light me-2"><i class="fas fa-plus"></i> Agregar Nuevo Libro</a>
                <a asp-action="ExportToPdf" class="btn btn-danger me-2"><i class="fas fa-file-pdf"></i> PDF</a>
                <a asp-action="ExportToExcel" class="btn btn-success"><i class="fas fa-file-excel"></i> Excel</a>
            </div>
        </div>

        <div class="card-body">

            @if (TempData["MensajeExito"] != null)
            {
                <div class="alert alert-success text-center">
                    <i class="fas fa-check-circle"></i> @TempData["MensajeExito"]
                </div>
            }

            <div class="table-responsive">
                <table class="table table-bordered table-hover align-middle">
                    <thead class="table-light text-center">
                        <tr>
                            <th>Título</th>
                            <th>Autor</th>
                            <th>Editorial</th>
                            <th>ISBN</th>
                            <th>Año</th>
                            <th>Categoría</th>
                            <th>Existencias</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var libro in Model)
                        {
                            <tr>
                                <td>@libro.Titulo</td>
                                <td>@libro.Autor</td>
                                <td>@libro.Editorial</td>
                                <td>@libro.ISBN</td>
                                <td>@libro.Anio</td>
                                <td>@libro.Categoria</td>
                                <td>@libro.Stock</td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@libro.Id" class="btn btn-sm btn-warning me-1">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@libro.Id" class="btn btn-sm btn-danger me-1">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@libro.Id" class="btn btn-sm btn-info">
                                        <i class="fas fa-info-circle"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="text-center mt-4">
                <a asp-controller="Prestamo" asp-action="Create" class="btn btn-outline-primary btn-lg">
                    <i class="fas fa-book-reader"></i> Realizar un préstamo
                </a>
            </div>

        </div>
    </div>
</div>
